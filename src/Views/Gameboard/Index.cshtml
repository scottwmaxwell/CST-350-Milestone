@model Minesweeper.Models.BoardModel

<style>
    .board{
        display:grid;
        grid-auto-rows: 50px;
        grid-template-columns: repeat(@Model.Size[0], 50px);
    }
    .cell{
        width:50px;
        height:50px;
        padding: 0;
        margin: 0;
        border: none;
    }
    .cell:hover{
        cursor:pointer;
        opacity:50%;
    }
    .icon{
        width:50px;
        height:50px;
        display: block;
    }
</style>

<p>Current Time: @DateTime.UtcNow</p>

<div>
    <h4>Click to Start Playing!</h4>
    <div id="game-board">
        @await Html.PartialAsync("UpdateBoard", Model)
    </div>
</div>
